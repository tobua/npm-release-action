{
  "name": "release-npm-action",
  "description": "GitHub action to version and document a plugin release to npm.",
  "repository": "github:tobua/release-npm-action",
  "homepage": "https://github.com/marketplace/actions/release-npm-action",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "lint": "eslint .",
    "build": "esbuild index.js --bundle --platform=node --format=esm --target=esnext --outfile=dist/index.js --sourcemap --external:semantic-release --external:@actions/core && npm install --no-package-lock --legacy-peer-deps --prefix dist",
    "test": "vitest run"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "semantic-release": "^21.0.3"
  },
  "type": "module",
  "files": [
    "!dist",
    "*.js"
  ],
  "keywords": [
    "github",
    "action",
    "javascript",
    "npm",
    "plugin",
    "semver"
  ],
  "devDependencies": {
    "esbuild": "^0.17.19",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.8",
    "vitest": "^0.32.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "ignorePatterns": "dist"
  },
  "engines": {
    "node": ">= 16"
  }
}
