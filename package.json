{
  "name": "release-npm-action",
  "description": "GitHub action to version and document a plugin release to npm.",
  "repository": "github:tobua/release-npm-action",
  "homepage": "https://github.com/marketplace/actions/release-npm-action",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "lint": "eslint .",
    "build": "esbuild index.js --bundle --platform=node --format=esm --target=esnext --outfile=dist/index.js --sourcemap --external:semantic-release --external:@actions/core && npm install --no-package-lock --legacy-peer-deps --prefix dist",
    "test": "jest"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "semantic-release": "^19.0.5"
  },
  "type": "module",
  "files": [
    "!dist",
    "*.js"
  ],
  "keywords": [
    "github",
    "action",
    "javascript",
    "npm",
    "plugin",
    "semver"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "esbuild": "^0.15.15",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "ignorePatterns": "dist"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "dist"
    ]
  },
  "engines": {
    "node": ">= 14"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
